@model List<PaintingAllViewModel>
@{
    ViewData["Title"] = "My Paintings";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

@if (!Model.Any())
{
    <h2 class="text-center">You do not have any paintings yet!</h2>
}
else
{
    <div class="row">
        @foreach (PaintingAllViewModel painting in Model)
        {
            <partial name="_PaintingPartial" model="painting" />
        }
    </div>
}